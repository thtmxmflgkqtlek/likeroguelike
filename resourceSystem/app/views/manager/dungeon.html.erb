      $("#left").click(function(){
        moveKeyProcess("left");
        });
        $("#up").click(function(){
          moveKeyProcess("up");
          });
          $("#right").click(function(){
            moveKeyProcess("right");
            });
            $("#down").click(function(){
              moveKeyProcess("down");
              });

        //onLoad
        generateMapTable();
        //sightProcess();

        setMapImage();
        setPlayerImage();
        setEnemyImage();
        renderText();

          });

          </script>
